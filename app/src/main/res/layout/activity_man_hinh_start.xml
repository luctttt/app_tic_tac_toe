<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/anhnen3"
        android:layout_height="match_parent"
        tools:context=".BXH.ManHinhStart">

        <ImageView
            android:layout_marginTop="-60dp"
            android:scaleType="centerCrop"
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/anhapp" />

        <Button
            android:theme="@style/buttonManhinhstart"
            android:textColor="@color/design_default_color_primary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:background="@drawable/btn_manhinhstart"
            android:layout_below="@+id/app_name"
            android:layout_centerHorizontal="true"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="-50dp"
            android:id="@+id/btn_start_manhinhstart"/>

        <Button
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"
            android:theme="@style/buttonManhinhstart"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="how to play"
            android:background="@drawable/btn_manhinhstart"
            android:layout_below="@+id/btn_start_manhinhstart"
            android:textSize="32dp"
            android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_how_to_play"/>

    </RelativeLayout>
</layout>
